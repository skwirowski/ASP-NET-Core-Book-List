@page
@model BookListRazor.Pages.BookList.IndexModel

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">BookList</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-info form-control text-white" asp-page="CreateBook">Create New Book</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.BookList.Count() > 0)
            {
                <table class="table table-striped border">
                    <thead>
                        <tr class="table-secondary">
                            <th>
                                @*<label>@Html.DisplayNameFor(b => b.BookList.FirstOrDefault().Name)</label>*@
                                <label asp-for="BookList.FirstOrDefault().Name"></label>
                            </th>
                            <th>
                                @*<label>@Html.DisplayNameFor(b => b.BookList.FirstOrDefault().Author)</label>*@
                                <label asp-for="BookList.FirstOrDefault().Author"></label>
                            </th>
                            <th>
                                @*<label>@Html.DisplayNameFor(b => b.BookList.FirstOrDefault().ISBN)</label>*@
                                <label asp-for="BookList.FirstOrDefault().ISBN"></label>
                            </th>
                            <th>
                                <label>Actions</label>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in Model.BookList)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(b => book.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(b => book.Author)
                                </td>
                                <td>
                                    @Html.DisplayFor(b => book.ISBN)
                                </td>
                                <td>
                                    <button class="btn btn-danger btn-sm"
                                            onclick="return confirm('Are you sure you want to delete?')"
                                            asp-page-handler="Delete"
                                            asp-route-id="@book.Id">
                                        Delete
                                    </button>
                                    <a class="btn btn-success btn-sm text-white" asp-page="EditBook" asp-route-id="@book.Id">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            }
            else
            {
                <p>No Books available.</p>
            }
        </form>
    </div>
</div>